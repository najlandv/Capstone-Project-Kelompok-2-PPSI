<%- include("head.ejs")%>
<div class="max-w-[85rem]  px-4 py-10 sm:px-10 lg:px-10 lg:py-14 mx-auto">
  <div class="flex flex-col">
    <div class="-m-1.5 overflow-x-auto">
      <div class="p-1.5 min-w-full inline-block align-middle">
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
          <div class="px-10 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
            <div>
              <h2 class="text-xl font-semibold text-gray-800">
                Riwayat Peminjaman
              </h2>
              <p class="text-sm text-gray-600">
                Riwayat peminjaman pengguna
              </p>
            </div>

            <div>
              <div class="inline-flex gap-x-2">
                <form action="/user/download-riwayat" method="get">
                <button class="py-2 px-2 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="#">
                  <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                  Download
                </button>
              </form>
              </div>
            </div>
          </div>

          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      No
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Nama Ruangan
                    </span>
                  </div>
                </th>
                
                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Tanggal Pengajuan
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Tanggal Keputusan
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Tanggal Pemakaian
                    </span>
                  </div>
                </th>
                
                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Waktu Mulai
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Waktu Selesai
                    </span>
                  </div>
                </th>


                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Status
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-start">
                  <div class="flex items-center gap-x-2">
                    <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                      Detail
                    </span>
                  </div>
                </th>

                <th scope="col" class="px-10 py-3 text-end"></th>
              </tr>
            </thead>

            <tbody class="divide-y divide-gray-200">
              <% let counter = 1; %>
                <% peminjamans.forEach(function(peminjaman) { %>
                  <% peminjaman.detailPeminjaman.forEach(function(detail) { %>
              <tr>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= counter++ %></span>
                  </div>
                </td>

                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= detail.ruangan.namaRuangan %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= new Date(peminjaman.tanggalPengajuan).toLocaleDateString() %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= new Date(peminjaman.tanggalKeputusan).toLocaleDateString() %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= new Date(detail.tanggal).toLocaleDateString() %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= detail.jamMulai %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="text-sm text-gray-600"><%= detail.jamSelesai %></span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <div class="px-10 py-3">
                    <span class="py-1 px-1.5 inline-flex items-center gap-x-1 text-xs font-medium rounded-full
                    <%= (peminjaman.statusPengajuan == 'Ditolak') ? 'bg-red-100 text-red-800' : (peminjaman.statusPengajuan == 'Diterima') ? 'bg-green-100 text-green-800' : 'bg-teal-100 text-teal-800' %>">
                    <svg class="size-2.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                    <%= peminjaman.statusPengajuan %>
                </span>
                  </div>
                </td>
                <td class="size-px whitespace-nowrap">
                  <form action="/user/detail-peminjaman/<%= peminjaman.idPeminjaman %>" method="get">
                    <button type="submit" class="block" data-hs-overlay="#hs-ai-invoice-modal">
                      <span class="px-10 py-1.5">
                        <span class="py-1 px-2 inline-flex justify-center items-center gap-2 rounded-lg border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm">
                          Detail
                        </span>
                      </span>
                    </button>
                  </form>
                </td>
              </tr>
                <% }) %>
              <% }) %>
            </tbody>
          </table>

          <div class="px-10 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200">
            <div>
              <p class="text-sm text-gray-600">
                <span class="font-semibold text-gray-800">6</span> results
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("footer.ejs")%>
