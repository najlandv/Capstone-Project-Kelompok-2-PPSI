<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      margin: 20px;
    }
    h1, h2, h3 {
      margin-bottom: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
    .section {
      margin-bottom: 20px;
    }
    .footer {
      margin-top: 20px;
      text-align: center;
      font-size: 12px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Riwayat Peminjaman</h1>
    <p>Dibuat pada <%= new Date().toLocaleDateString() %></p>
  </div>

  <div class="section">
    <h2>Informasi User</h2>
    <p><strong>Nama:</strong> <%= user.nama %> (<%= user.username %>)</p>
    <p><strong>Nomor HP:</strong> <%= user.noHp %></p>
  </div>

  <div class="section">
    <h2>Daftar Riwayat Peminjaman</h2>
    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>Nama Ruangan</th>
          <th>Kegiatan</th>
          <th>Tanggal Pengajuan</th>
          <th>Tanggal Keputusan</th>
          <th>Tanggal Pemakaian</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% let counter = 1; %>
          <% peminjamans.forEach(function(peminjaman) { %>
            <% peminjaman.detailPeminjaman.forEach(function(detail) { %>
          <tr>
            <td><%= counter++ %></td>
            <td><%= detail.ruangan.namaRuangan %></td>
            <td><%= peminjaman.kegiatan %></td>
            <td><%= new Date(peminjaman.tanggalPengajuan).toLocaleDateString() %></td>
            <td><%= new Date(peminjaman.tanggalKeputusan).toLocaleDateString() %></td>
            <td><%= new Date(detail.tanggal).toLocaleDateString() %></td>
            <td><%= peminjaman.statusPengajuan %></td>
          </tr>
            <% }) %>
          <% }) %>
      </tbody>
    </table>
  </div>

  <div class="footer">
    <p>&copy; <%= new Date().getFullYear() %> SiMapan</p>
  </div>
</body>
</html>
