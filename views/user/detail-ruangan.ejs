<%- include("head.ejs")%>
<div class="flex flex-col max-w-4xl px-4 py-10 sm:px-6 lg:px-8 mx-auto">
  <div class="relative bg-white rounded-xl shadow p-4 sm:p-7">
    <a href="/user/daftar-ruangan" class="absolute top-4 right-4 text-gray-600 hover:text-gray-800">
      <svg
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        ></path>
      </svg>
    </a>
    <div id="detail-ruangan" class="mt-4 flex flex-col justify-center items-center">
        <img
          class="object-cover w-52"
          src="/uploads/ruangan/<%= ruangan.foto %>"
          alt="Image Description"
        />
      <p class="mt-2 text-xl font-bold text-gray-800 mb-2 leading-snug">
        Nama Ruangan: <%= ruangan.namaRuangan %> <br>
        Lokasi: <%= ruangan.lokasi %> <br>
        Kapasitas: <%= ruangan.kapasitas %> <br>
        Fasilitas: <%= ruangan.fasilitas %> <br>
      </p>
    </div>
    <form>
      <div class="mt-5 flex justify-end gap-x-2">
        <a
          href="/user/pinjam-ruangan/<%= ruangan.idRuangan %>"
          class="py-2 px-8 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-[#0a2e3b] text-white hover:bg-[#1B6C89] disabled:opacity-50 disabled:pointer-events-none"
        >
          Pinjam
        </a>
      </div>
    </form>
  </div>
</div>
<%- include("footer.ejs")%>