<%- include("header.ejs")%> <%- include("sidebar.ejs")%>
<div class="w-full lg:ps-64">
  <div class="p-4 sm:p-6 space-y-4 sm:space-y-6">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6"></div>
    <div class="flex flex-col">
      <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
          <div
            class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden"
          >
            <div
              class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto"
            >
              <div class="mx-auto max-w-2xl">
                <div class="text-center">
                  <h2
                    class="text-xl text-gray-800 font-bold sm:text-3xl dark:text-black"
                  >
                    Edit Ruangan
                  </h2>
                </div>
                <div
                  class="mt-5 p-4 relative z-10 bg-white border rounded-xl sm:mt-10 md:p-10 white:bg-neutral-900 dark:border-neutral-700"
                >
                <form
                method="post"
                action="/admin/edit-ruangan/<%= ruangan.idRuangan %>"
                enctype="multipart/form-data"
              >
                <div class="mb-4 sm:mb-8">
                  <label
                    for="namaRuangan"
                    class="block mb-2 text-sm font-medium dark:text-black"
                    >Nama Ruangan</label
                  >
                  <input
                    name="namaRuangan"
                    type="text"
                    id="namaRuangan"
                    class="py-3 px-4 block w-full border border-black rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none bg-white:bg-neutral-900 dark:border-neutral-700 dark:text-black dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                    value="<%= ruangan.namaRuangan %>"
                  />
                </div>
              
                <div class="mb-4 sm:mb-8">
                  <label
                    for="lokasi"
                    class="block mb-2 text-sm font-medium dark:text-black"
                    >Lokasi Ruangan</label
                  >
                  <input
                    name="lokasi"
                    type="text"
                    id="lokasi"
                    class="py-3 px-4 block w-full border border-black rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none bg-white:bg-neutral-900 dark:border-neutral-700 dark:text-black dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                    value="<%= ruangan.lokasi %>"
                  />
                </div>
              
                <div class="mb-4 sm:mb-8">
                  <label
                    for="kapasitas"
                    class="block mb-2 text-sm font-medium dark:text-black"
                    >Kapasitas Ruangan</label
                  >
                  <input
                    name="kapasitas"
                    type="text"
                    id="kapasitas"
                    class="py-3 px-4 block w-full border border-black rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none bg-white:bg-neutral-900 dark:border-neutral-700 dark:text-black dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                    value="<%= ruangan.kapasitas %>"
                  />
                </div>
              
                <div>
                  <label
                    for="fasilitas"
                    class="block mb-2 text-sm font-medium dark:text-black"
                    >Fasilitas Ruangan</label
                  >
                  <div class="mt-1">
                    <textarea
                      name="fasilitas"
                      id="fasilitas"
                      rows="3"
                      class="py-3 px-4 block w-full border border-black rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none bg-white:bg-neutral-900 dark:border-neutral-700 dark:text-black dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                    ><%= ruangan.fasilitas %></textarea>
                  </div>
                </div>
              
                <div class="mb-4">
                  <label
                    for="file"
                    class="block mb-2 text-sm font-medium dark:text-black"
                    >Gambar Ruangan</label
                  >
                  
                  <!-- Pratinjau gambar -->
                  <div class="flex flex-col items-center space-y-4">
                    <img
                      id="imagePreview"
                      src="/uploads/ruangan/<%= ruangan.foto %>"
                      alt="Image Preview"
                      class="w-32 h-32 object-cover border rounded-md"
                      style="display: <%= ruangan.foto ? 'block' : 'none' %>;"
                    />
                    <!-- Tombol edit -->
                    <button
                      type="button"
                      id="editImageButton"
                      class="py-2 px-4 text-sm font-medium text-white bg-[#0a2e3b] rounded-md hover:bg-[#1B6C89] focus:outline-none focus:ring focus:ring-blue-300"
                    >
                      Edit Gambar
                    </button>
                  </div>
                  
                  
                  <!-- Input file (tersembunyi secara default) -->
                  <input
                    type="file"
                    name="foto"
                    id="file"
                    class="mt-2 hidden shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    onchange="previewImage(event)"
                  />
                
                  <!-- Input hidden untuk menyimpan nama file lama -->
                  <input
                    type="hidden"
                    name="fotoLama"
                    value="<%= ruangan.foto %>"
                  />
                </div>
                <div class="mt-6 grid gap-4 grid-cols-2">
                  <button
                    type="submit"
                    value="submit"
                    class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-[#0a2e3b] text-white hover:bg-[#1B6C89] disabled:opacity-50 disabled:pointer-events-none"
                  >
                    Simpan
                  </button>
                  <a
                    href="/admin/daftar-ruangan"
                    class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-[#0a2e3b] text-white hover:bg-[#1B6C89] disabled:opacity-50 disabled:pointer-events-none"
                    >Batal</a
                  >
                </div>
              </form>
              
                </div>
              </div>
            </div>
            <div
              class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200"
            >
              <div>
                <p class="text-sm text-gray-600">
                  <span class="font-semibold text-gray-800">12</span> results
                </p>
              </div>

              <div>
                <div class="inline-flex gap-x-2">
                  <button
                    type="button"
                    class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none"
                  >
                    <svg
                      class="flex-shrink-0 size-4"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="m15 18-6-6 6-6" />
                    </svg>
                    Prev
                  </button>

                  <button
                    type="button"
                    class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none"
                  >
                    Next
                    <svg
                      class="flex-shrink-0 size-4"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="m9 18 6-6-6-6" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  let isImageEdited = false;

  // Ketika tombol edit gambar diklik
  document.getElementById("editImageButton").addEventListener("click", function () {
    // Tampilkan input file
    document.getElementById("file").click();
  });

  // Ketika pengguna memilih file baru
  document.getElementById("file").addEventListener("change", function (event) {
    const fileInput = event.target.files[0];
    const imagePreview = document.getElementById("imagePreview");

    if (fileInput) {
      const reader = new FileReader();
      reader.onload = function (e) {
        imagePreview.src = e.target.result; // Perbarui pratinjau gambar
        imagePreview.style.display = "block"; // Pastikan gambar terlihat
        isImageEdited = true; // Tandai bahwa gambar telah diubah
      };
      reader.readAsDataURL(fileInput); // Baca file sebagai URL Data
    }
  });

  // Sebelum submit form
  document.querySelector("form").addEventListener("submit", function () {
    // Jika gambar tidak diedit, kosongkan value input file
    if (!isImageEdited) {
      document.getElementById("file").removeAttribute("name");
    }
  });
</script>
<%- include("./footer.ejs")%>
