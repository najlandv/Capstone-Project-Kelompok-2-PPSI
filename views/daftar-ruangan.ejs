<%- include("head.ejs")%>
<div class="max-w-[85rem] px-4 py-4 sm:px-6 lg:px-8 lg:py-4 mx-auto my-4 bg-white">
  <form action="/cari-ruangan" method="GET" class="mb-6">
    <div class="relative">
      <input type="text" name="search" placeholder="Cari Ruangan" value="<%= searchQuery %>" class="border p-2 w-full rounded pl-10">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
    </div>
  </form> 
  <div class="flex flex-col gap-3 sm:gap-6">
    <% ruangans.forEach((ruangan) => { %>
    <div
      class="group flex flex-col bg-[#1B6C89] border shadow-sm rounded-xl hover:shadow-md transition white:bg-neutral-900 dark:border-neutral-800"
    >
      <div class="p-4 md:p-5">
        <div class="flex justify-between items-center">
          <h3 class="text-base text-white font-bold">
            <%= ruangan.namaRuangan %>
          </h3>
          <!-- Buttons -->
          <div class="flex space-x-2">
            <button
              type="button"
              class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-white bg-[#0a2e3b] hover:bg-[#0a2e3b] hover:text-white disabled:opacity-50 disabled:pointer-events-none"
              data-hs-overlay="#hs-subscription-with-image"
              onclick="window.location.href='/detail-ruangan/<%= ruangan.idRuangan %>'"
            >
              Detail
            </button>
            <button
              type="button"
              class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-white bg-[#0a2e3b] hover:bg-[#0a2e3b] hover:text-white disabled:opacity-50 disabled:pointer-events-none"
              onclick="window.location.href='/pinjam-ruangan';"
            >
              Pinjam
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<div
  id="hs-subscription-with-image"
  class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto"
>
  <div
    class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto"
  >
    <div
      class="relative flex flex-col bg-white shadow-lg rounded-xl dark:bg-neutral-900"
    >
      <div class="absolute top-2 z-[10] end-2">
        <button
          type="button"
          class="inline-flex justify-center items-center size-8 text-sm font-semibold rounded-lg border border-transparent bg-white/10 text-white hover:bg-white/20 disabled:opacity-50 disabled:pointer-events-none"
          data-hs-overlay="#hs-subscription-with-image"
        >
          <span class="sr-only">Close</span>
          <svg
            class="flex-shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6 6 18" />
            <path d="m6 6 12 12" />
          </svg>
        </button>
      </div>

      <div class="aspect-w-16 aspect-h-8">
        <img
          class="w-full object-cover rounded-t-xl"
          src="https://images.unsplash.com/photo-1648747067020-73f77da74e8f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3425&q=80"
          alt="Image Description"
        />
      </div>

      <div class="p-4 sm:p-10 text-center overflow-y-auto">
        <div class="max-w-2xl mx-auto">
          <h3
            class="mb-2 text-2xl font-bold text-gray-800 dark:text-neutral-200 text-justify"
          >
            Ruang Seminar SI
          </h3>
          <p class="text-gray-500 dark:text-neutral-500 text-justify">
            Kapasitas: 50 orang<br />
            Lokasi: Gedung A, Lantai 2<br />
            Fasilitas: AC, Proyektor, Meja, Kursi
          </p>
        </div>

        <div class="mt-6 flex justify-end gap-x-4">
          <button
            type="button"
            class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-white bg-[#0a2e3b] hover:bg-[#0a2e3b] hover:text-white disabled:opacity-50 disabled:pointer-events-none"
            onclick="window.location.href='peminjaman';"
          >
            Pinjam
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("footer.ejs")%>
