<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body background="/images/back.png">
    <main
      id="content"
      class="w-full max-w-md mx-auto p-6"
      style="margin-top: 7rem"
    >
      <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm">
        <div class="p-4 sm:p-7">
          <div class="text-center">
            <!-- <img
            src="/src/images/Logo-unand.png"
            alt="Logo"
            class="items-center w-28 mx-auto mb-2"
            /> -->
            <h1 class="block text-3xl font-bold text-[#0a2e3b]">SiMapan</h1>
          </div>

          <div class="mt-5">
            <div
              class="py-3 flex items-center text-xs text-gray-400 uppercase before:flex-1 before:border-t before:border-gray-200 before:me-6 after:flex-1 after:border-t after:border-gray-200 after:ms-6"
            >
              Or
            </div>
            <% if (message) { %>
            <div
              class="mt-4 <%= message.type === 'error' ? 'bg-red-100 border-red-200 text-red-800' : 'bg-green-100 border-green-200 text-[#0a2e3b]' %> border text-sm rounded-lg p-4"
              role="alert"
            >
              <span class="font-bold"
                ><%= message.type === 'error' ? '!' : '' %></span
              >
              <%= message.text %>
            </div>
            <% } %>
            <form action="/auth/login" method="post">
              <div class="grid gap-y-4">
                <div>
                  <label for="username" class="block text-sm mb-2"
                    >Username</label
                  >
                  <div class="relative">
                    <input
                      type="username"
                      id="username"
                      name="username"
                      placeholder="Username"
                      class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none"
                      aria-describedby="username-error"
                    />
                  </div>
                </div>
                <div>
                  <div class="flex justify-between items-center">
                    <label for="password" class="block text-sm mb-2"
                      >Password</label
                    >
                  </div>
                  <div class="relative">
                    <input
                      type="password"
                      id="password"
                      name="password"
                      placeholder="Password"
                      class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-green-500 focus:ring-green-500 disabled:opacity-50 disabled:pointer-events-none"
                      aria-describedby="password-error"
                    />
                    <% if (typeof message !== 'undefined' && message ===
                    'Password is required') { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %> <% if (typeof message !== 'undefined' && message ===
                    'Invalid Username or Password') { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                  </div>
                </div>

                <button
                  type="submit"
                  class="w-full mt-0.5 py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-[#0a2e3b] text-white hover:bg-[#1B6C89] disabled:opacity-50 disabled:pointer-events-none"
                >
                  Log in
                </button>
              </div>
            </form>
            <!-- Register Link -->
            <div class="mt-4 text-center">
              <p class="text-sm text-gray-600">
                Don't have an account?
                <a href="/auth/register" class="font-medium text-[#0a2e3b] hover:text-[#0a2e3b]">
                  Register here
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="preline.js"></script>
  </body>
</html>
